<mujoco model="mjmodel scene">
  <include file="nezha.xml"/>

  <statistic center="0.2 0 0.2" extent="1.0"/>

  <!-- 优化物理参数与精度，增大margin/gap -->
  <option timestep="0.0005" tolerance="1e-12" solver="Newton" iterations="500"
          ccd_iterations="200" ccd_tolerance="1e-12" jacobian="dense" cone="elliptic" gravity="0 0 -9.81" impratio="10">
    <flag contact="enable" energy="enable" multiccd="enable" island="enable"/>
  </option>

  <size njmax="500" nconmax="2000"/>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    <material name="table_wood" rgba="0.65 0.5 0.3 1" specular="0.3" shininess="0.5"/>
    <material name="block_red" rgba="0.8 0.2 0.2 1" specular="0.5" shininess="0.8"/>
  </asset>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.1 0.1 0.1" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane" condim="6" friction="1.5 0.1 0.01"/>

    <!-- 桌子与其腿 -->
    <body name="table" pos="0.7 0 0.3">
      <geom name="table_top" type="box" size="0.4 0.3 0.05" pos="0 0 0.32" material="table_wood" condim="6" friction="2.5 0.3 0.02"/>
      <geom name="table_leg1" type="box" size="0.03 0.03 0.3" pos="-0.37 0.27 0" material="table_wood" condim="6" friction="1.5 0.1 0.01"/>
      <geom name="table_leg2" type="box" size="0.03 0.03 0.3" pos="-0.37 -0.27 0" material="table_wood" condim="6" friction="1.5 0.1 0.01"/>
      <geom name="table_leg3" type="box" size="0.03 0.03 0.3" pos="0.37 0.27 0" material="table_wood" condim="6" friction="1.5 0.1 0.01"/>
      <geom name="table_leg4" type="box" size="0.03 0.03 0.3" pos="0.37 -0.27 0" material="table_wood" condim="6" friction="1.5 0.1 0.01"/>
    </body>

    <body name="block" pos="0.9 0.01 0.87">
      <joint name="block_joint" type="free"/>
      <geom name="block_geom" type="cylinder" size="0.025 0.25" material="block_red"
      mass="0.2" condim="6" friction="2.0 1.5 0.8" solref="0.01 2" solimp="0.9 0.99 0.001" contype="1" conaffinity="2"
      margin="0.0002" gap="0.00001"/>
    </body>
  </worldbody>

</mujoco>
